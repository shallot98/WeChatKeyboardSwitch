<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>items</key>
    <array>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Settings</string>
            <key>footerText</key>
            <string>Enable or disable WeChat keyboard swipe gestures. Swipe up for English, swipe down for Chinese.</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>default</key>
            <true/>
            <key>defaults</key>
            <string>com.yourrepo.wechatkeyboardswitch</string>
            <key>key</key>
            <string>enabled</string>
            <key>label</key>
            <string>Enable</string>
            <key>PostNotification</key>
            <string>com.yourrepo.wechatkeyboardswitch/prefsChanged</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Usage</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>footerText</key>
            <string>When WeChat keyboard is active:
• Swipe UP on keyboard → Switch to English
• Swipe DOWN on keyboard → Switch to Chinese

Works globally across all apps when WeChat keyboard is used.</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>About</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>footerText</key>
            <string>WeChat Keyboard Switch v1.1.0
Supports iOS 16+ and rootless jailbreaks.

Changes apply immediately (no respring required).</string>
        </dict>
    </array>
    <key>title</key>
    <string>WeChat Keyboard Switch</string>
</dict>
</plist>
